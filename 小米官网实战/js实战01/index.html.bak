	window.onload = function(){
	

		Fly("#bar-card").hover(function(){
			Fly(this).find("a").addClass("on")
			Fly("#slidebar").stop().slidedown(200)
			
		},function(){
			Fly("#slidebar").stop().slideup(200);
			Fly(this).find("a").removeClass("on")
		})
		
		Fly(".n-s-right").hover(function(){
			Fly(".n-search").addClass("color")
		},function(){
